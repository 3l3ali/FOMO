<% if @user.travel_guide? %>
  <ul>
    <li>
      <h2>location: </h2><h2><small><%= @user.location %></small></h2>
    </li>
    <li>
      <h2>Age: </h2><h2><small><%= @user.age %></small></h2>
    </li>
    <li>
      <h2>gender: </h2><h2><small><%= @user.gender %></small></h2>
    </li>
    <li>
      <h2>Languages i can speak:</h2>
      <% if @user.languages.present? %>
        <% @user.languages.each do |language| %>
          <h4><%= language.name %></h4>
        <% end %>
      <% end %>
    </li>
    <li>
      <h2>Contact me:</h2><h2><small><%= @user.contact %></small></h2>
    </li>
  </ul>
<% elsif @user.travel_guide.nil? %>
  <%= link_to "Become a travel guide", newg_user_path %>
<% else %>
  <h2>Off Duty</h2>
<% end %>

<% if current_user.id == @user.id && !current_user.invalid_guide? %>
  <%= simple_form_for current_user do |f| %>
    <%= f.input :travel_guide, label: "Available" %>
    <%= f.submit "submit", class:"btn btn-info"%>
  <% end %>
<% end %>
