<div class="containter">
  <div class="row">
    <div class="col-xs-12 col-md-offset-3 col-md-6">
      <table class="favourite-table">
        <% @user.favourite_posts.each do |favourite| %>
          <tr>
            <td width="30%">
              <%= link_to favourite.title, post_path(favourite) %><br>
            </td>
            <td width="30%">
              <% if current_user %>
                  <% unless current_user.favourites.where(post: favourite).exists?  %>
                    <%= link_to "favourite", favourites_add_path(post_id: favourite.id), class:"clean-look-btn-red" %>
                  <% else %>
                    <%= link_to "unfavourite", favourites_remove_path(post_id: favourite.id), class:"clean-look-btn-red" %>
                  <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
