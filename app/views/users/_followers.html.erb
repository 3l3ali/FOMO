<div class="containter">
  <div class="row">
    <div class="col-xs-12 col-md-offset-3 col-md-6">
      <table class= "following-table">
        <% @user.followers.each do |follower| %>
          <tr>
            <td width="30%">
              <div>
                <% unless follower.facebook_picture_url.present? %>
                  <%= (cl_image_tag follower.photo.path, class:"avatar-bordered") if follower.photo.present? %>
                <% else %>
                  <%= image_tag follower.facebook_picture_url, class:"avatar-bordered" %>
                <% end %>
              </div>
            </td>

            <td width="30%">
              <%= link_to user_path(follower) do %>
               <%= following.first_name %>&nbsp;<%=following.last_name %>
              <% end %>
            </td>
            <% if current_user.id == @user.id %>
              <td width="30%">
                  <% unless current_user.following_ids.include?(follower.id) %>
                    <%= link_to "Follow", followings_create_path(user_id: follower.id), class:"clean-look-btn" %>
                    <% else %>
                    <%= link_to "Unfollow", followings_destroy_path(user_id: follower.id), data: {confirm: "Are you sure you want to unfollow #{follower.first_name}?"}  , class:"clean-look-btn-red" %>
                  <% end %>
              </td>

            <% end %>
         </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

