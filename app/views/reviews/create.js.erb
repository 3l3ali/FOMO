  // new_review.slideDown();
  // new_review.toggle();
  console.log(1);
  // Reset the form
  $('#new_review').html("<%= j render 'reviews/form', post: @post, review: Review.new %>");
  $('#new_review_desktop').html("<%= j render 'reviews/form', post: @post, review: Review.new %>");
<% end %>

