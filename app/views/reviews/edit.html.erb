<div class="review-container">
  <div class="container">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
        <div class="review-title">
          <h3> Review for <%= @review.post.title  %> </h3>
        </div>
        <%= simple_form_for [@review.post, @review] do |f| %>
          <%= f.input :description %>
          <%= f.input :recommended, label: "Recommend?" %>
          <%= f.submit "Submit", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

