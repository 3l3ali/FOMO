<div class="home-container">
  <div class="container">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1">
        <div class="logo-link">
          <%= link_to root_path do%>
            <div class="missing-out">
              <h1 class="blue-letters">Missing</h1>
              <h1 class="white-letters">Out</h1>
            </div>
          <% end %>
        </div>
        <div class="login-spacing"></div>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs-sign-in">
              <%= f.input :email, required: false, autofocus: true, placeholder: 'Email', label: false, input_html: {class: "big-input"} %>
              <%= f.input :password, required: false, placeholder: 'Password',label: false, input_html: {class: "big-input"} %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions text-center">
              <%= f.button :submit, "Sign in", class: 'btn btn-primary btn-width' %>
            </div>
          <% end %>
            <div class='forgot-your-pw'>
            <%= link_to "Forgot your password?", new_password_path(resource_name) %>
            <br />
            </div>
            <div class="or-break">
            <div class="or-line"></div>
            <div class="or-class">
              <p>or</p>
            </div>
            <div class="or-line"></div>
          </div>
            <%= link_to user_facebook_omniauth_authorize_path ,id: "home-fb-link" do %>
              <div class="facebook">
                <i class="fa fa-facebook"></i>&nbsp; Sign in with Facebook
              </div>
            <% end %>
            <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-primary btn-width' %>
      </div>
    </div>
  </div>
</div>
