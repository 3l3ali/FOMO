<div class="home-container">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="logo-link">
          <%= link_to root_path do%>
            <div class="missing-out">
              <h1 class="blue-letters">Missing</h1>
              <h1 class="white-letters">Out</h1>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-xs-offset-2 col-xs-8">
        <div class="sign-up-card">
          <h3>Sign up</h3>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>
            <div class="form-inputs">
              <%= f.input :first_name, autofocus: true, label: false, placeholder: "First Name" %>
              <%= f.input :last_name, label: false, placeholder: "Last Name" %>
              <%= f.input :email, required: true, label: false, placeholder: "Email" %>
              <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), label: false, placeholder: "Password" %>
              <%= f.input :password_confirmation, required: true, label: false, placeholder: "Confirm Password" %>
              <div class="photo-upload-align">
              <%= f.input :photo, as: :attachinary, label:false %>
              </div>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "Sign up", class:"btn btn-primary btn-width" %>
            </div>
          <% end %>
          <div class="or-break">
            <div class="or-line"></div>
            <div class="or-class">
              <p>or</p>
            </div>
            <div class="or-line"></div>
          </div>
          <div class="sign-in-fb">
            <%= link_to user_facebook_omniauth_authorize_path ,id: "home-fb-link" do %>
              <div class="facebook">
                <i class="fa fa-facebook"></i>&nbsp; Sign in with Facebook
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
