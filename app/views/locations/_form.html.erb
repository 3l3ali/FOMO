<%= simple_form_for [@post ,@location] do |f| %>
  <div class="form-inputs-sign-in">
    <%= f.input :name, placeholder: 'Name of the place', input_html: {class: "big-input"}, label: false %>
    <%= f.input :address ,  placeholder: 'Address', input_html: {class: "big-input"}, label: false %>
  </div>
  <div class="form-actions text-center">
    <%= f.button :submit, "Submit", class: 'btn btn-primary btn-width' %>
  </div>
<% end %>
