<%= form_tag index_path, method: :get  do %>
  <%= text_field_tag :search, params[:search], placeholder: "Location: eg. Meguro, Tokyo", class: "text-field-filter" %>
  <%= select_tag :category, options_for_select(Post.categories_for_select, params[:category]), class: "category-filter" %>

  <%= select_tag :bounds, options_for_select({"1 km"=>1, "5 km"=>5, "10 km"=>10, "20 km"=>20, "40 km"=>40, "60 km"=>60}, params[:bounds]), class: "bounds-filter" %>

  <%= submit_tag "Search", class: "btn search-submit-btn" %>
<% end %>
