            <ul>
              <% @entertainment.each do |post| %>
                <%= link_to post_path post do %>
                  <li><i class="fa fa-map-marker loc-mark" aria-hidden="true">&nbsp;&nbsp;<%= post.title %></li>
                <% end %>
              <% end %>
            </ul>
          </div>
        </div>
      <% else %>
        <div class="col-xs-12 col-md-offset-3 col-md-6 no-favs">
          <p>You didn't favorite any yet !</p>
        </div>
      <% end %>
    </div>

  </div>
</div>






