<div class="saved-loc-wrapper">
  <h1>My Favorites</h1>

  <div class="container">

    <div class="row">
      <h4>Activities</h4>
      <% unless @activities.count.zero? %>
        <div class="col-xs-12 col-md-offset-3 col-md-6">
          <div class="fav-category">
            <ul>
              <% @activities.each do |post| %>
                <%= link_to post_path post do %>
                  <li><i class="fa fa-map-marker loc-mark" aria-hidden="true">&nbsp;&nbsp;</i><%= post.title %></li>
                <% end %>
              <% end %>
            </ul>
          </div>
        </div>
      <% else %>
        <div class="col-xs-12 col-md-offset-3 col-md-6 no-favs">
          <p>You didn't favorite any yet !</p>
        </div>
      <% end %>
    </div>

    <hr>

    <div class="row">
      <h4>Foods</h4>
      <% unless @foods.count.zero? %>

        <div class="col-xs-12 col-md-offset-3 col-md-6">
