<h1>My Favorites</h1>

<div class="container">
  <div class="row">

    <% if @count.zero? %>
      <div class="col-xs-12 col-md-offset-3 col-md-6">
        <div class="no-favs">
          <h2><small>You didn't favorite any gems yet !</small></h2>
        </div>
      </div>
    <% end %>

    <% unless @activities.count.zero? %>
      <h4>Activities</h4>

      <div class="col-xs-12 col-md-offset-3 col-md-6">
        <div class="fav-activities">
          <ul>
            <% @activities.each do |post| %>
              <%= link_to post_path post do %>
                <li><%= post.title %></li>
              <% end %>
            <% end %>
          </ul>
        </div>
      </div>
      <hr>
    <% end %>

    <% unless @foods.count.zero? %>
      <h4>Foods</h4>

      <div class="col-xs-12 col-md-offset-3 col-md-6">
        <div class="fav-foods">
          <% @foods.each do |post| %>
            <%= link_to post_path post do %>
              <%= post.title %>
            <% end %>
          <% end %>
        </div>
      </div>
      <hr>
    <% end %>

    <% unless @entertainment.count.zero? %>
      <h4>Entertainments</h4>

      <div class="col-xs-12 col-md-offset-3 col-md-6">
        <div class="fav-entertainment">
          <% @entertainment.each do |post| %>
            <%= link_to post_path post do %>
              <%= post.title %>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>

  </div>
</div>






