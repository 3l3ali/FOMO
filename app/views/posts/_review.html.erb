<div data-review-id="<%= review.id %>">
  <table class="review-table">
    <tr>
      <td width="20%">
        <div class="review-avatar">
          <% unless review.user.facebook_picture_url.present? %>
            <%= cl_image_tag review.user.photo.path if review.user.photo.present? %>
          <% else %>
            <%= image_tag review.user.facebook_picture_url %>
          <% end %>
        </div>
      </td>
      <td width="15%">
        <% if review.recommended %>
          <%= image_tag "recommended.png" %>
        <% end %>
      </td>
      <td width="60%">
        <%= review.description %>
      </td>
      <td width="5%">
          <%= link_to "Update", edit_post_review_path(review.post, review) if policy(review).edit? %>
          <%= link_to "delete", post_review_path(review.post, review), method: :delete,remote: true, data: {confirm: "Are you sure?"} if policy(review).destroy? %>
      </td>
    </tr>
  </table>
  <hr>
</div>
