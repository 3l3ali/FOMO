<% if policy(Post).create? %>
  <%= link_to "create post", new_post_path %>
<% end %><br>

<% @posts.each do |post| %>
  <%= link_to post.title, post_path(post) %><br>
  <%= post.description %><br>
  <%= link_to "Update", edit_post_path(post) if policy(post).edit? %><br>
  <%= link_to "Delete", post_path(post), method: :delete, data: {confirm: "Are you sure?"} if policy(post).destroy? %><hr>
<% end %>

