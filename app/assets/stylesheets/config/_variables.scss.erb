/* -------------------------------------
 * Fonts
 * ------------------------------------- */
// Google fonts
@import url("https://fonts.googleapis.com/css?family=Open+Sans:400,300,700|Raleway:400,100,300,700,500");
$base-font: "Open Sans", "Helvetica", "sans-serif";
// $header-font: "Raleway", "Helvetica", "sans-serif";

// Local fonts (uncomment following lines)
@font-face {
  font-family: "Gotham";
  src: font-url('<%= asset_path "gotham-rounded/gothamrnd-book-webfont.eot" %>'),
       font-url('<%= asset_path "gotham-rounded/gothamrnd-book-webfont.eot?#iefix" %>') format('embedded-opentype'),
       font-url('<%= asset_path "gotham-rounded/gothamrnd-book-webfont.woff" %>') format('woff'),
       font-url('<%= asset_path "gotham-rounded/gothamrnd-book-webfont.ttf" %>') format('truetype'),
       font-url('<%= asset_path "gotham-rounded/gothamrnd-book-webfont.svg#svgFontName" %>') format('svg')

}
$header-font: "Gotham";

// Font-size and line-height
$base-size: 16px;
$base-height: 1.4;

/* -------------------------------------
 * Colors
 * ------------------------------------- */
// Scheme
$brand-color: #D23333;

$red: #EE5F5B;
$alert-blue: rgba(0, 146, 202, 0.5);
$blue: #0092CA;
$yellow: #FDB631;
$orange: #E67E22;
$green: #32B796;
$gray: #000000;
